import os
from fastapi import FastAPI
from fastapi.middleware.cors import CORSMiddleware

app = FastAPI()

env_suffix = os.getenv("NEW_RELIC_ENVIRONMENT", "dt")
if env_suffix == "eut":
    env_suffix = "smktest"

frontend_origin = f"https://elis-assistant-{env_suffix}.k8s.elis.nonprod.uscis.dhs.gov"

app.add_middleware(
    CORSMiddleware,
    allow_origins=[
        "http://localhost:5173",
        frontend_origin,
    ],
    allow_credentials=True,
    allow_methods=["*"],
    allow_headers=["*"],
)
